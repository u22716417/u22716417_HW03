<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title -Library Management System</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    <style>

        body {
            background-color: #BC9E82;
        }
        .navbar {
            background-color: #CFB095;
        }

        .navbar-brand {
            font-family: 'cursive', cursive;
            color: black;
            display: flex;
            align-items: center;
        }

            .navbar-brand img {
                margin-left: 20px;
                width:80px;
                height:80px
            }
        .navbar-dark .navbar-toggler-icon {
            background-color: white;
        }

    </style>
</head>

<body>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm">
        <div class="navbar-brand">
            <img height="50" width="50" src="~/Content/Books.jpeg" />
            @Html.ActionLink("Library Management System", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })

        </div>
            <button type="button" class="navbar-toggler" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" title="Toggle navigation" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse d-sm-inline-flex justify-content-between">
                <ul style="font-size:16px" class="navbar-nav flex-grow-1">
                    <li>@Html.ActionLink("Home", "Index", "Home", new { area = "" }, new { @class = "nav-link" })</li>
                    <li>@Html.ActionLink("Maintain", "Maintain", "Home", new { area = "" }, new { @class = "nav-link" })</li>
                    <li>@Html.ActionLink("Report", "ReportView", "Home", new { area = "" }, new { @class = "nav-link" })</li>
                </ul>
            </div>
        </div>
    </nav>
    <div>
        @RenderBody()
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>